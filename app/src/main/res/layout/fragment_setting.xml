<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragment.SettingFragment">

    <LinearLayout

        android:id="@+id/toolbar_settings"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/settings_fragment"
            android:fontFamily="@font/josefinsans_variablefont_wght"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_25sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveLayout"
            android:background="@drawable/radius_background"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_below="@+id/toolbar_settings"
            android:layout_marginVertical="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/img_gallery"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:src="@drawable/gallery_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_img"
                    android:textSize="@dimen/_18sdp"
                    android:layout_toEndOf="@+id/img_gallery"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/save_text"/>

                <Switch
                    android:id="@+id/saveGallerySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/save_text"
                    android:layout_centerVertical="true"
                   android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/defNameLayout"
            android:background="@drawable/radius_background"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_below="@+id/saveLayout"
            android:gravity="center_vertical"
            android:layout_marginVertical="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/img_doc"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/doc_logo_black" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/def_file_name"
                android:textSize="@dimen/_18sdp"
                android:layout_toEndOf="@+id/img_doc"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:id="@+id/def_name_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_name"
                android:textSize="@dimen/_12sdp"
                android:layout_toEndOf="@+id/img_doc"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/def_name_text"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:id="@+id/defFilename"/>

        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_below="@+id/defNameLayout"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/gray"
            android:layout_marginHorizontal="@dimen/_10sdp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactLayout"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_below="@+id/view2"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/radius_background"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textSize="@dimen/_30sdp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/contact_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instaLayout"
                android:background="@drawable/radius_background"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_below="@+id/contact_text"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_20sdp"
                >

                <ImageView
                    android:id="@+id/img_insta"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/instagram_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insta_lbl"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toEndOf="@+id/img_insta"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/insta_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instaid"
                    android:textSize="@dimen/_18sdp"
                    android:layout_toEndOf="@+id/img_insta"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:autoLink="web"
                    android:linksClickable="true"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/insta_text"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/instaId"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mailLayout"
                android:background="@drawable/radius_background"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_below="@+id/instaLayout"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_20sdp"
                >

                <ImageView
                    android:id="@+id/img_mail"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/mail_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mail_lbl"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toEndOf="@+id/img_mail"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/mail_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mailid"
                    android:textSize="@dimen/_18sdp"
                    android:layout_toEndOf="@+id/img_mail"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/mail_text"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/mailId"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linkdLayout"
                android:background="@drawable/radius_background"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_below="@+id/mailLayout"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/_20sdp"
                >

                <ImageView
                    android:id="@+id/img_linkdin"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/linkdin_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkedin_lbl"
                    android:textSize="@dimen/_13sdp"
                    android:layout_toEndOf="@+id/img_linkdin"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/linkdin_text"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/linkedinid"
                    android:textSize="@dimen/_18sdp"
                    android:layout_toEndOf="@+id/img_linkdin"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/linkdin_text"
                    android:fontFamily="@font/josefinsans_variablefont_wght"
                    android:id="@+id/linkdinId"/>

            </RelativeLayout>

        </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/contactLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/josefinsans_variablefont_wght"
            android:text="by VeKtiQ"
            android:textColor="@color/gray"
            android:textSize="@dimen/_20sdp" />
    </LinearLayout>

</RelativeLayout>