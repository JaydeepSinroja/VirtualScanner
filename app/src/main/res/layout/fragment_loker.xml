<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".Fragment.LokerFragment">

    <TextView
        android:id="@+id/textWatcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textwatcher"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textWatcher2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textwatcher"
        android:visibility="gone" />

    <LinearLayout

        android:id="@+id/toolbar_locker"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/locker_fragment"
            android:fontFamily="@font/josefinsans_variablefont_wght"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_25sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray"
            android:layout_marginTop="@dimen/_5sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_locker"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@id/toolbar_locker"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_promt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enterpasscode"
            android:fontFamily="@font/josefinsans_variablefont_wght"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/text_locker"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/firstCheck"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/unselected_check_image" />

        <ImageView
            android:id="@+id/secondCheck"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/unselected_check_image" />

        <ImageView
            android:id="@+id/thirdCheck"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/unselected_check_image" />

        <ImageView
            android:id="@+id/fourthCheck"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@drawable/unselected_check_image" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_layout"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_2"
                android:layout_width="@dimen/_60sdp"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_3"
                android:layout_width="@dimen/_60sdp"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstLine"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_4"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_5"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_6"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="6"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLine"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_7"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_8"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_9"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdLine"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/button_0"
                android:layout_width="@dimen/_60sdp"

                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:textColor="@color/white"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:background="@drawable/locker_btn_background"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/_30sdp" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthLine"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cancel_locker"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:textSize="@dimen/_15sdp"
                android:background="@drawable/ripple_btn"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/colorPrimary" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/delete_locker"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ripple_btn"
                android:textSize="@dimen/_15sdp"
                android:fontFamily="@font/josefinsans_variablefont_wght"
                android:text="Delete"
                android:textColor="@color/colorPrimary" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>